        MENUITEM "新图形窗口",                  IDM_NEWGRAPHICS
        MENUITEM "关闭",                        IDM_CLOSE
        MENUITEM "退出",                        IDM_EXIT
    END
    POPUP "窗口"
    BEGIN
        MENUITEM "水平",                        IDM_TILEHORZ
        MENUITEM "纵向",                        IDM_TILEVERT
        MENUITEM "重叠",                        IDM_CASCADE
    END
    MENUITEM "显示文本",                    IDM_TEXT
END

